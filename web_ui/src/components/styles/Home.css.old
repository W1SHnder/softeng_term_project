.movie-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  grid-gap: 20px;
}

.movie {
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.movie-image {
  width: 100%;
  height: auto;
  cursor: pointer;
}

.movie-details {
  padding: 10px;
}

.mpaa-rating {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.movie-title {
  margin-top: 0;
  margin-bottom: 5px;
  font-size: 1.1rem;
  color: #333;
}

.home {
  padding: 20px;
}

.movie-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}

.movie-navbar button {
  padding: 10px 20px;
  font-size: 16px;
  background-color: transparent;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.movie-navbar button:hover,
.movie-navbar button.active {
  background-color: #f0f0f0;
}

.search-bar {
  display: flex;
}

.search-bar input[type="text"] {
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px 0 0 5px;
}

.search-bar button {
  padding: 10px 20px;
  font-size: 16px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 0 5px 5px 0;
  cursor: pointer;
}

.search-bar button:hover {
  background-color: #0056b3;
}

